class Famoso:
    def __init__(self, nombre, profesion, edad):
        self.nombre = nombre
        self.profesion = profesion
        self.edad = edad

    def saludar(self):
        print(f"Hola, soy {self.nombre} y soy {self.profesion}. Â¡Mucho gusto!")

# Crear una instancia de un famoso
famoso = Famoso("Leonardo DiCaprio", "actor", 47)

# Saludar al famoso
famoso.saludar()
