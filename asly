class Famoso:
    def __init__(self, nombre, profesion):
        self.nombre = nombre
        self.profesion = profesion

    def presentarse(self):
        print(f"¡Hola! Soy {self.nombre} y soy {self.profesion}. ¡Mucho gusto!")

# Crear una instancia de un famoso
ada_lovelace = Famoso("Ada Lovelace", "programadora")

# Presentarse como famoso
ada_lovelace.presentarse()
